<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_check"
    android:padding="30dp"
    tools:context=".MoveActivity">

    <TextView
        android:layout_marginTop="120dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/circularstdbold"
        android:text="Settings"
        android:textColor="#ffff"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView"
        app:cardBackgroundColor="#2276df"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Allow GPS Background"
                android:layout_gravity="center"
                android:fontFamily="@font/circularstdbold"
                android:textSize="15sp"
                android:textColor="#ffff"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp">


                <Button
                    android:id="@+id/button1"
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_semi_rounded_1"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/circularstdbold"
                    android:textAllCaps="false"
                    android:textColor="#ffff"/>

                <Button
                    android:id="@+id/button0"
                    android:background="@drawable/button_semi_rounded"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/circularstdbold"
                    android:textAllCaps="false"
                    android:textColor="#ffff"/>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/cv"
        app:cardBackgroundColor="#2276df"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Allow Checkin"
                android:layout_gravity="center"
                android:fontFamily="@font/circularstdbold"
                android:textSize="15sp"
                android:textColor="#ffff"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp">


                <Button
                    android:id="@+id/button2"
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_semi_rounded_1"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/circularstdbold"
                    android:textAllCaps="false"
                    android:textColor="#ffff"/>

                <Button
                    android:id="@+id/button3"
                    android:background="@drawable/button_semi_rounded"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/circularstdbold"
                    android:textAllCaps="false"
                    android:textColor="#ffff"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/settings_safe"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveSettings"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/circularstdbold"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/cv2">

    </Button>



</RelativeLayout>